{
    "id": "10dada0e-569d-4354-b1c1-7152e6bcdb72",
    "name": "GooglePlayHalt",
    "friendlyName": "Google Play - Halt",
    "description": "Halt an app previously deployed to the Google Play Store",
    "author": "Microsoft Corporation",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [
        "npm"
    ],
    "version": {
        "Major": "2",
        "Minor": "190",
        "Patch": "0"
    },
    "minimumAgentVersion": "2.182.1",
    "instanceNameFormat": "Halt $(packageName)",
    "inputs": [
        {
            "name": "authType",
            "type": "pickList",
            "label": "Authentication method",
            "defaultValue": "ServiceEndpoint",
            "helpMarkDown": "",
            "options": {
                "JsonFile": "JSON auth file",
                "ServiceEndpoint": "Service connection"
            }
        },
        {
            "name": "serviceEndpoint",
            "aliases": [
                "serviceConnection"
            ],
            "type": "connectedService:google-play",
            "label": "Service connection",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Google Play service connection that is configured with your account credentials.",
            "visibleRule": "authType = ServiceEndpoint"
        },
        {
            "name": "serviceAccountKey",
            "type": "filePath",
            "label": "JSON key path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The JSON file provided by Google Play that includes the service account's identity you wish to publish your APK under.",
            "visibleRule": "authType = JsonFile"
        },
        {
            "name": "packageName",
            "type": "string",
            "label": "Package name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The unique package identifier (e.g. com.foo.myapp) that you wish to halt."
        },
        {
            "name": "track",
            "type": "pickList",
            "label": "Track",
            "defaultValue": "production",
            "required": true,
            "helpMarkDown": "Track you want to halt the APK from.",
            "options": {
                "internal": "Internal test",
                "alpha": "Alpha",
                "beta": "Beta",
                "production": "Production"
            },
            "properties": {
                "EditableOptions": "True"
            }
        }
    ],
    "execution": {
        "Node10": {
            "target": "google-play-halt.js",
            "argumentFormat": ""
        },
        "PowerShell": {
            "target": "$(currentDirectory)\\google-play-halt.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    },
    "messages": {
        "InvalidAuthFile": "Specified Auth file was invalid",
        "InvalidAuthFilewithName": "%s was not a valid auth file",
        "JsonKeyFileNotFound": "The service account JSON key file could not be found.",
        "EndpointNotFound": "The service connection could not be found.",
        "Authenticating": "Authenticating with Google Play",
        "GetTrackInfo": "Getting information for track %s",
        "StatusUpdate": "The status has been updated to halted!",
        "InProgressNotFound": "Production rollout was not found.",
        "Success": "Successfully halt APKs.",
        "Failure": "Failed to halt APKs."
    },
    "restrictions": {
        "commands": {
            "mode": "restricted"
        },
        "settableVariables": {
            "allowed": []
        }
    }
}
